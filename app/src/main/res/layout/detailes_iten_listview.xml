<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12px"
    android:layout_marginRight="12px"
    android:background="@color/main_me_bg"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        android:layout_marginTop="12px"
        android:background="@drawable/typographer_item"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/detailes_item_shuai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:src="@mipmap/xiaoshuai" />

            <TextView
                android:id="@+id/detailes_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14px"
                android:text="11月13日 10:32"
                android:textColor="@color/mypublish_textcolor"
                android:textSize="@dimen/textsize14" />
        </LinearLayout>

        <include layout="@layout/publish_item_line" />

        <TextView
            android:id="@+id/detailes_item_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="24px"
            android:text="某品牌精装画册需要印刷"
            android:textColor="@color/mypublish_titles"
            android:textSize="@dimen/textsize18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailes_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="20px"
            android:text="某品牌精装画册需要印刷22222222222222222222222222222222222222222222222222222222222222"
            android:textColor="@color/mypublish_content"
            android:textSize="@dimen/textsize14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="222px" >

            <ImageView
                android:id="@+id/detailes_item_img1"
                android:layout_width="0dp"
                android:layout_height="222px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="14px"
                android:layout_weight="1"
                android:background="@color/main_me_bg"
                android:scaleType="center"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/detailes_item_img2"
                android:layout_width="0dp"
                android:layout_height="222px"
                android:layout_marginRight="10px"
                android:layout_marginTop="14px"
                android:layout_weight="1"
                android:background="@color/main_me_bg"
                android:scaleType="center"
                android:src="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/detailes_item_imgethree"
                android:layout_width="0dp"
                android:layout_height="222px"
                android:layout_marginRight="10px"
                android:layout_marginTop="14px"
                android:layout_weight="1"
                android:background="@color/main_me_bg"
                android:scaleType="center"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24px"
            android:layout_marginTop="24px" >

            <ImageView
                android:id="@+id/detailes_item_recorder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50px"
                android:src="@mipmap/icon_voice" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26px"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_red" />

                <TextView
                    android:id="@+id/detailes_item_recorder_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="11"
                    android:textColor="@color/mypublish_textcolor"
                    android:textSize="@dimen/textsize14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:src="@mipmap/icon_positioning" />

            <TextView
                android:id="@+id/detailes_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:text="我在东莞虎门大宁"
                android:textColor="@color/mypublish_textcolor"
                android:textSize="@dimen/textsize14"/>

            <TextView
                android:id="@+id/detailes_item_guanzhutext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="117px"
                android:text="关注 8"
                android:textColor="@color/mypublish_content"
                android:textSize="@dimen/textsize14"
                />

            <TextView
                android:id="@+id/detailes_item_liulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38px"
                android:text="浏览 855"
                android:textColor="@color/mypublish_content"
                android:textSize="@dimen/textsize14"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23px"
                android:text="留言245"
                android:textColor="@color/mypublish_content"
                android:textSize="@dimen/textsize14"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        android:layout_marginTop="20px"
        android:background="@drawable/typographer_item"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/detailes_item_liuyan"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:text="@string/detailes_liuyan"
            android:textSize="@dimen/textsize18"
            android:textColor="@color/mypublish_titles"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/textsize22"
            />
        
         <include layout="@layout/publish_item_line" />
         <ListView
             android:id="@+id/detailes_item_liuyan_listView"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:fastScrollEnabled="true"
             android:divider="@color/main_me_textline"
             android:dividerHeight="1dp"
             android:layout_marginLeft="26px"
             android:layout_marginRight="28px">

         </ListView>
    </LinearLayout>

</LinearLayout>