<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_marginTop="114px" >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/line" />

            <EditText
                android:id="@+id/register_phoneNum"
                android:layout_width="wrap_content"
                android:layout_height="90px"
                android:background="@null"
                android:drawableLeft="@mipmap/icon_account"
                android:gravity="center_vertical"
                android:hint="@string/register_phone"
                android:singleLine="true"
                android:textColor="@color/register_et"
                android:textColorHint="@color/register_et"
                android:textSize="@dimen/textsize18"
                android:drawablePadding="20px"
                android:phoneNumber="true"
                />

        </LinearLayout>

        <Button
            android:id="@+id/register_getCode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32px"
            android:background="@color/textcoloryellow"
            android:gravity="center"
         
            android:text="@string/getyanzhengma2"
            android:textColor="@color/textcolorback"
            android:textSize="@dimen/textsize18" />
    </LinearLayout>
    <include layout="@layout/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32px"
        android:layout_marginRight="270px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/register_code"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@null"
            android:hint="@string/yanzhengma"
            android:drawableLeft="@mipmap/icon_verification_code"
            android:gravity="center_vertical"

            android:singleLine="true"
            android:textColor="@color/register_et"
            android:textColorHint="@color/register_et"
            android:textSize="@dimen/textsize18"
            android:drawablePadding="20px"
            android:numeric="integer"/>


    </LinearLayout>
    <include layout="@layout/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_password"
            android:gravity="center_vertical"
            android:hint="请输入不少于6位的密码"
            android:singleLine="true"
            android:textColor="@color/register_et"
            android:textColorHint="@color/register_et"
            android:textSize="@dimen/textsize18"
            android:drawablePadding="20px"
            android:password="true"
            />


    </LinearLayout>
    <include layout="@layout/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="102px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_marginTop="62px"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@mipmap/icon"
            android:background="#2B2B2B"
            android:paddingRight="10px"
            android:paddingLeft="10px"/>

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14px"
            android:background="@drawable/login_bg_selector"
            android:gravity="center"
            android:text="@string/register"
            android:textSize="@dimen/textsize18"
            android:textColor="@color/textcoloryellow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_marginTop="20px"
        android:gravity="right"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击注册即表示同意"
            android:textColor="@color/register_et" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14px"
            android:text="@string/xieyi"
            android:textColor="@color/textcoloryellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/textcoloryellow" />

        <TextView
            android:id="@+id/user_greetment_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"

            android:textColor="@color/textcoloryellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/textcoloryellow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/textcoloryellow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="66px" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40px"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/register_weixinlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_wetcat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"

                android:textColor="@color/register_et"
                android:textSize="@dimen/textsize14"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/register_qqlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"

                android:textColor="@color/register_et"
                android:textSize="@dimen/textsize14"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>