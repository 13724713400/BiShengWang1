<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/textcolorwite"
    android:layout_marginLeft="17px"
    android:layout_marginRight="17px"
    android:paddingLeft="17px"
    android:paddingRight="17px"
    >
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:gravity="center_vertical"
        >
        
        <ImageView
            android:id="@+id/detailes_liuyanitem_touxiang"
            android:layout_width="50px"
            android:layout_height="50px"
            android:src="@mipmap/liuyanhead"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/detailes_liuyanitem_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eason"
            android:textSize="@dimen/textsize18"
            android:textColor="@color/mypublish_titles"
            android:textStyle="bold"
            android:layout_marginLeft="30px"/>
        
        <ImageView
            android:id="@+id/detailes_liuyanitem_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_male"
            android:layout_marginLeft="30px"/>
         <ImageView
             android:id="@+id/detailes_liuyanitem_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shang"
            android:layout_marginLeft="14px"/>
         
         <TextView
             android:id="@+id/detailes_liuyanitem_sixin"
             android:layout_width="74px"
             android:layout_height="wrap_content"
             android:text="@string/detailes_sixin"
             android:textColor="@color/mypublish_textcolor"
             android:textSize="@dimen/textsize12" 
             android:gravity="center"
             android:paddingTop="4px"
             android:paddingBottom="4px"
             android:layout_marginLeft="40px"
             android:background="@mipmap/kuang"
             />

    </LinearLayout>
    
    <TextView
        android:id="@+id/detailes_liuyanitem_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您好啊，我公司是专业做画册的期待与您合作"
        android:layout_marginTop="20px"
        android:textSize="@dimen/textsize18"
        android:textColor="@color/mypublish_content"/>

    <LinearLayout 
        android:layout_marginTop="40px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <TextView
            android:id="@+id/detailes_liuyanitem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015.11.17  15.30"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/mypublish_textcolor"/>
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_positioning"
            android:layout_marginLeft="80px"/>
        
        <TextView
            android:id="@+id/detailes_liuyanitem_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我在东莞"
            android:textColor="@color/mypublish_textcolor"
            android:layout_marginLeft="10px"
            android:layout_marginBottom="20px"
            android:textSize="@dimen/textsize14"/>
        
    </LinearLayout>
</LinearLayout>
