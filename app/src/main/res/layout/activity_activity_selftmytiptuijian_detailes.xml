<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/my_tip_bg"
  >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="124px"
        android:background="@color/textcoloryellow" >

        <ImageView
            android:id="@+id/mypublish_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/btn_arrow_back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mytip_tanshuo"
            android:textColor="@color/textcolorback"
            android:layout_marginLeft="80px"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textsize18"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mytip_titles"
            android:textColor="@color/textcolorback"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textsize22"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="74px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px">
        <ImageView
            android:id="@+id/selftitem_tuijian_img1"
            android:layout_width="306px"
            android:layout_height="306px"
            android:background="@color/my_tip_imgbg"
            android:scaleType="fitXY"
          />
        <ImageView
            android:id="@+id/selftitem_tuijian_img2"
            android:layout_width="306px"
            android:layout_height="306px"
            android:background="@color/my_tip_imgbg"
            android:scaleType="centerCrop"
            android:layout_marginLeft="350px"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45px"
        android:layout_marginRight="32px"
        android:layout_marginLeft="32px">
        <ImageView
            android:id="@+id/selftitem_tuijian_img3"
            android:layout_width="306px"
            android:layout_height="306px"
            android:background="@color/my_tip_imgbg"
            android:scaleType="fitXY"
          />
        <ImageView
            android:id="@+id/selftitem_tuijian_img4"
            android:layout_width="306px"
            android:layout_height="306px"
            android:background="@color/my_tip_imgbg"
            android:scaleType="fitXY"
            android:layout_marginLeft="350px"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/selftitem_tuijian_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="毕昇美男子系列1"
        android:textColor="@color/textcolorback"
        android:textSize="@dimen/textsize22"
        android:layout_marginLeft="50px"
        android:layout_marginTop="82px"
        />

    <TextView
        android:id="@+id/selftitem_tuijian_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="毕昇美男子系列1毕昇美男子系列1111111111111111111111111111111111111111111111111111111111111111111111111111111111"
        android:textColor="@color/textcolorback"
        android:textSize="@dimen/textsize22"
        android:layout_marginLeft="50px"
        android:layout_marginTop="41px"
        android:layout_marginRight="50px"
        android:lines="4"
        android:ellipsize="end"
        />
      <Button
          android:id="@+id/selftitem_tuijian_beginUse"
          android:layout_width="206px"
          android:layout_height="46px"
          android:layout_marginTop="66px"
          android:layout_marginLeft="497px"
          android:layout_marginRight="32px"
          android:text="@string/selft_mytip_detaile_btn"
          android:textSize="@dimen/textsize14"
          android:textColor="@color/textcolorback"
          android:background="@drawable/selft_mytip_detail_bg"
          />
     </LinearLayout>
    </ScrollView>
</LinearLayout>
