<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_marginTop="114px"
        android:orientation="vertical" >
        <include layout="@layout/line" />
        <EditText
            android:id="@+id/reset_password"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_password"
            android:gravity="center_vertical"
            android:hint="@string/reset_password"
            android:singleLine="true"
            android:textColor="@color/register_et"
            android:textColorHint="@color/register_et"
            android:textSize="@dimen/textsize18"
            android:drawablePadding="20px"

            />
        <include layout="@layout/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:orientation="vertical" >
        <EditText
            android:id="@+id/reset_againpssword"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_password"
            android:gravity="center_vertical"
            android:hint="@string/reset_password_again"
            android:singleLine="true"
            android:textColor="@color/register_et"
            android:textColorHint="@color/register_et"
            android:textSize="@dimen/textsize18"
            android:drawablePadding="20px"
            android:password="true"/>

    </LinearLayout>
    <include layout="@layout/line"
        android:layout_marginLeft="32px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="32px"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_marginTop="115px"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@mipmap/icon"
            android:layout_gravity="center"
            android:background="#2B2B2B"
            android:paddingRight="10px"
            android:paddingLeft="10px"

            />
        <Button
            android:id="@+id/reset_finish"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="14px"
            android:background="@drawable/login_bg_selector"
            android:gravity="center"
            android:text="@string/reset_finishi"
            android:textColor="@color/textcoloryellow"
            android:textSize="@dimen/textsize18"/>
    </LinearLayout>


</LinearLayout>
