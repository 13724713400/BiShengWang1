<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/login_bg" >
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_marginTop="114px"
        android:orientation="vertical" >
      <include layout="@layout/line" />
        <EditText
            android:id="@+id/Login_phone_number"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_account"
            android:gravity="center_vertical"
            android:hint="@string/register_phone"
            android:singleLine="true"
            android:textColor="@color/register_et"
            android:textColorHint="@color/register_et"
            android:textSize="@dimen/textsize18"
           android:drawablePadding="20px"
            android:phoneNumber="true"
           />
        <include layout="@layout/line" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:orientation="vertical" >
        <EditText
            android:id="@+id/Login_pssword"
            android:layout_width="match_parent"
            android:layout_height="90px"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_password"
            android:gravity="center_vertical"
            android:hint="@string/shurumima"
            android:singleLine="true"
            android:textColor="@color/register_et"
            android:textColorHint="@color/register_et"
            android:textSize="@dimen/textsize18"
            android:drawablePadding="20px"
            android:password="true"/>

    </LinearLayout>
    <include layout="@layout/line"
        android:layout_marginLeft="32px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="32px"/>
    
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32px"
        android:layout_gravity="right"
        android:layout_marginRight="32px"
        android:layout_marginTop="18px"
        android:orientation="horizontal" >
          <TextView
              android:id="@+id/login_register"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/register"
              android:textColor="@color/textcoloryellow"
              android:layout_marginRight="20px"
              />
          <include
              layout="@layout/line_verture"/>
          <TextView
              android:id="@+id/login_forgetpassword"
               android:layout_marginRight="20px"
                android:layout_marginLeft="20px"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/wangjimima"
              android:textColor="@color/textcoloryellow"
              />
          <include


              layout="@layout/line_verture"/>
          <TextView
              android:id="@+id/login_feedback"
              android:layout_marginLeft="20px"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/fankui"
              android:textColor="@color/textcoloryellow"
              />
          
    </LinearLayout>
    
      
         <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_marginTop="115px"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@mipmap/icon"
            android:layout_gravity="center"
            android:background="#2B2B2B"
            android:paddingLeft="10px"
            android:paddingRight="10px"
            />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginLeft="14px"
            android:background="@drawable/login_bg_selector"
            android:gravity="center"
            android:text="@string/denglue"
            android:textColor="@color/textcoloryellow" 
            android:textSize="@dimen/textsize18"/>
    </LinearLayout>

 <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="114px" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40px"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/login_weixinlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_wetcat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="@string/weixin"
                android:textColor="@color/register_et"
                android:textSize="@dimen/textsize14"
                android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/login_QQlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_qq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30px"
                android:text="@string/qqdenglu"
                android:textColor="@color/register_et"
                android:textSize="@dimen/textsize14"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
