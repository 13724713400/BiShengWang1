<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="500px"
    android:layout_marginLeft="12px"
    android:layout_marginRight="12px"
    android:background="@drawable/publish_purchaseinfo_bg"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/mypulishi_item_shuai"
            android:layout_width="32px"
            android:layout_height="32px"
            android:layout_marginLeft="10px"
            android:src="@mipmap/xiaoshuai"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/mypulishi_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="53px"
            android:text="11月13日 10:32"
            android:textColor="@color/mypublish_textcolor"
            android:textSize="@dimen/textsize14"
            android:layout_centerVertical="true"/>

     <!-- <TextView
          android:id="@+id/mypulishi_item_dingxiangxiugai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="400px"
            android:text="@string/mypublishi_item_dingxiangxiugai"
            android:textColor="@color/mypublish_content"
            android:textSize="@dimen/textsize14"
          android:padding="10px"
          android:layout_centerVertical="true"/>-->

      <TextView
          android:id="@+id/mypulishi_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
            android:text="@string/mypublishi_item_shanchu"
            android:textColor="@color/mypublish_content"
            android:textSize="@dimen/textsize14"
          android:layout_marginRight="20px"
          android:padding="10px"
          android:layout_centerVertical="true"/>

    </RelativeLayout>

    <include layout="@layout/publish_item_line" />

    <TextView
        android:id="@+id/mypulishi_item_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="24px"
        android:text="某品牌精装画册需要印刷"
        android:textColor="@color/mypublish_titles"
        android:textSize="@dimen/textsize18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mypulishi_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="20px"
        android:text="某品牌精装画册需要印刷222222222222222222222222222222222222222222222222"
        android:textColor="@color/mypublish_content"
        android:textSize="@dimen/textsize14"
        android:textStyle="bold"
        android:lines="2"
        android:ellipsize="end"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="222px" >

        <ImageView
            android:id="@+id/mypulishi_item_img1"
            android:layout_width="0dp"
            android:layout_height="222px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="18px"
            android:layout_weight="1"
            android:background="@color/main_me_bg"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/mypulishi_item_img2"
            android:layout_width="0dp"
            android:layout_height="222px"
            android:layout_marginRight="10px"
            android:layout_marginTop="18px"
            android:layout_weight="1"
            android:background="@color/main_me_bg"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/mypulishi_item_img3"
            android:layout_width="0dp"
            android:layout_height="222px"
            android:layout_marginRight="10px"
            android:layout_marginTop="18px"
            android:layout_weight="1"
            android:background="@color/main_me_bg"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"

            android:src="@mipmap/icon_positioning" />

        <TextView
            android:id="@+id/mypulishi_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:text="我在东莞虎门大宁"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/mypublish_textcolor" />

        <TextView
            android:id="@+id/mypulishi_item_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100px"
            android:text="关注 8"
            android:textSize="@dimen/textsize14"
            android:layout_toLeftOf="@+id/mypulishi_item_liulan"
            android:textColor="@color/mypublish_content"
            android:layout_marginRight="10px"/>

        <TextView
            android:id="@+id/mypulishi_item_liulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="浏览 855"
            android:textSize="@dimen/textsize14"
            android:layout_toLeftOf="@+id/mypulishi_item_liuyan"
            android:layout_marginRight="10px"
            android:textColor="@color/mypublish_content" />

        <TextView
            android:id="@+id/mypulishi_item_liuyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textsize14"
            android:text="留言245"
          android:layout_centerHorizontal="true"
            android:layout_marginRight="10px"
            android:textColor="@color/mypublish_content" />
    </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/mypulishi_item_shixiao_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/bigbj"
        android:visibility="gone"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/mypulishi_item_shixiaodelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mypublishi_item_shanchu"
        android:textColor="@color/textcolorwite"
        android:textSize="@dimen/textsize18"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12px"
        android:layout_marginRight="20px"
        android:visibility="visible"

        />
</RelativeLayout>
