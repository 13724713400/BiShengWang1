    android:background="#fff">
    <RelativeLayout
        android:id="@+id/detailes_titles"
        android:layout_width="match_parent"
        android:layout_height="110px"
        android:layout_alignParentTop="true"
        android:background="@color/textcoloryellow" >

        <ImageView
            android:id="@+id/pringtingpeaple_details_back"
            android:layout_width="130px"
            android:layout_height="40px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20px"
            android:scaleType="fitXY"
            android:layout_marginLeft="-20px"
            android:layout_alignParentLeft="true"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            android:src="@mipmap/backtrack" />

        <TextView
            android:id="@+id/pringtingpeaple_details_femail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20px"
            android:layout_toRightOf="@+id/pringtingpeaple_details_back"
            android:text="个人中心"
            android:textColor="@color/textcolorback"
            android:textSize="@dimen/textsize22" />

        <ImageView
            android:id="@+id/printingpeaple_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:src="@mipmap/yudian" />
    </RelativeLayout>



