<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/typographer_item"
    android:orientation="vertical"

  >

    <RelativeLayout
        android:id="@+id/homepage_item_xinxi"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center_vertical"
       >
        <ImageView
            android:id="@+id/homepage_item_touxiang"
            android:layout_width="87px"
            android:layout_height="87px"
            android:layout_marginLeft="11px"
            android:src="@mipmap/touxiang_01"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="87px"
            android:layout_toRightOf="@id/homepage_item_touxiang"
            android:layout_marginLeft="25px"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8px">
                
                <TextView
                    android:id="@+id/homepage_item_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="毕昇小女子"
                    android:textSize="25px"
                    android:textColor="@color/mypublish_titles"
                   />

                <ImageView
                    android:id="@+id/homepage_item_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_female"
                    android:layout_marginLeft="18px"/>
                <ImageView
                    android:id="@+id/homepage_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/cai"
                    android:layout_marginLeft="18px"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19px">
                <ImageView
                    android:id="@+id/homepage_item_shuai"
                    android:layout_width="32px"
                    android:layout_height="32px"
                    android:src="@mipmap/xiaoshuai"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/homepage_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textsize14"
                    android:gravity="center"
                    android:textColor="@color/mypublish_textcolor"
                    android:layout_marginLeft="14px"/>

                <TextView
                    android:id="@+id/homepage_item_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.8km"
                    android:textSize="@dimen/textsize14"
                    android:gravity="center"
                    android:textColor="@color/mypublish_textcolor"
                    android:layout_marginLeft="30px"/>
            </LinearLayout>
            
        </LinearLayout>
        <ImageView
            android:id="@+id/homepage_item_gunazhuimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_marginRight="110px"
            android:layout_centerVertical="true"
            android:background="@drawable/focusdrawble"
          />

        <ImageView
            android:id="@+id/homepage_item_call"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_phone_off"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17px"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <include layout="@layout/publish_item_line" />

    <TextView
        android:id="@+id/homepage_item_content_titles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginRight="10px"
        android:layout_marginTop="24px"
        android:text="某品牌精装画册需要印刷"
        android:textColor="@color/mypublish_titles"
        android:textSize="@dimen/textsize18"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/homepage_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="20px"
        android:text="某品牌精装画册需要印刷"
        android:textColor="@color/mypublish_content"
        android:textSize="@dimen/textsize16"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="222px" >
        <ImageView
            android:id="@+id/homepage_item_img1"
            android:layout_width="0dp"
            android:layout_height="222px"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="18px"
            android:layout_weight="1"
            android:background="@color/main_me_bg"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />
        <ImageView
            android:id="@+id/homepage_item_img2"
            android:layout_width="0dp"
            android:layout_height="222px"
            android:layout_marginRight="10px"
            android:layout_marginTop="18px"
            android:layout_weight="1"
            android:background="@color/main_me_bg"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/homepage_item_img3"
            android:layout_width="0dp"
            android:layout_height="222px"
            android:layout_marginRight="10px"
            android:layout_marginTop="18px"
            android:layout_weight="1"
            android:background="@color/main_me_bg"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"

            android:src="@mipmap/icon_positioning" />

        <TextView
            android:id="@+id/homepage_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52px"
            android:text="我在东莞虎门大宁"
            android:textSize="@dimen/textsize14"
            android:textColor="@color/mypublish_textcolor" />

        <TextView
            android:id="@+id/homepage_item_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="346px"
            android:text="关注 8"
            android:layout_toLeftOf="@+id/homepage_item_liulan"
            android:textSize="@dimen/textsize14"
            android:layout_marginRight="10px"
            android:textColor="@color/mypublish_content" />



        <TextView
            android:id="@+id/homepage_item_liuyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/textsize14"
            android:text="留言245"
            android:layout_marginRight="17px"
            android:textColor="@color/mypublish_content" />
        <TextView
            android:id="@+id/homepage_item_liulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/homepage_item_liuyan"
            android:text="浏览 855"
            android:textSize="@dimen/textsize14"
            android:layout_marginRight="10px"
            android:textColor="@color/mypublish_content" />
    </RelativeLayout>

</LinearLayout>