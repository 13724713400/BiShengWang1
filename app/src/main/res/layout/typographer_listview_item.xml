<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200px"
    android:layout_marginLeft="10px"
    android:layout_marginRight="10px"
    android:background="@drawable/typographer_item"
   >
    <ImageView
        android:id="@+id/typographer_item_touxiang"
        android:layout_alignParentLeft="true"
        android:layout_width="242px"
        android:layout_height="180px"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10px"

        />
    <RelativeLayout
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250px"
        android:layout_marginTop="10px"

       >

        <TextView
            android:id="@+id/typographer_item_Name"
            android:layout_width="300px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="东莞市盛洪制品有限公司"
            android:textColor="@color/typograpter_text"
            android:textSize="@dimen/textsize18"
            android:singleLine="true"
            android:ellipsize="end"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="44px"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/typographer_item_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/kuang"
                android:padding="5px"
                android:text="无碳纸"
                android:textColor="@color/typograpter_text"
                android:textSize="@dimen/textsize14"
                android:visibility="gone"
                android:gravity="center"
                android:singleLine="true"
               />
            <TextView
                android:id="@+id/typographer_item_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20px"
                android:gravity="center"
                android:visibility="gone"
                android:padding="5px"
                android:text="单据印刷"
                android:background="@mipmap/kuang"
                android:textColor="@color/typograpter_text"
                android:textSize="@dimen/textsize14"
                android:singleLine="true"/>
        </LinearLayout>

     <TextView
            android:id="@+id/typographer_item_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="95px"
            android:gravity="center"
            android:padding="5px"
            android:text="复写联单"
            android:visibility="gone"
            android:textColor="@color/textcolorback"
            android:textSize="@dimen/textsize14"
         android:background="@mipmap/kuang"
         android:layout_marginBottom="2px"
         android:singleLine="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginTop="10px"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_positioning"
                android:layout_marginBottom="10px"
              />
            <TextView
                android:id="@+id/typographer_item_address"
                android:layout_width="250px"
                android:layout_height="wrap_content"
                android:text="我在东莞虎门大宁"
                android:layout_marginLeft="10px"
                android:textColor="@color/typograpter_textdefault"
                android:textSize="@dimen/textsize14"
                android:singleLine="true"


                />
        </LinearLayout>
    </RelativeLayout>

   <!-- <RelativeLayout
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10px"
       >-->

        <ImageView
            android:id="@+id/typographer_item_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/iconffocusonofftwo"
            android:gravity="top"
            android:scaleType="fitXY"
            android:layout_marginTop="10px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10px"
           />
        <TextView
            android:id="@+id/typographer_item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="0.5km"
            android:textColor="@color/typograpter_textdefault"
            android:textSize="@dimen/textsize14"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10px"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
           />
  <!--  </RelativeLayout>-->
    <ImageView
        android:id="@+id/typographer_bananer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_add"
        android:scaleType="fitXY"
        android:visibility="gone"
        />

</RelativeLayout>