<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/textcolorwite"
    android:paddingLeft="12px"
    android:paddingRight="12px"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24px"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/mymessage_item_head"
            android:layout_width="100px"
            android:layout_height="100px"
            android:src="@mipmap/liuyanhead"
            android:scaleType="centerCrop"
            />
        <TextView
            android:id="@+id/mymessage_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eason"
            android:textSize="@dimen/textsize18"
            android:textColor="#a3b52f"
            android:textStyle="bold"
            android:layout_marginLeft="30px"/>

        <ImageView
            android:id="@+id/mymessage_item_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_male"
            android:layout_marginLeft="30px"/>

        <ImageView
            android:id="@+id/mymessage_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/shang"
            android:layout_marginLeft="30px"/>

    </LinearLayout>

    <TextView
        android:id="@+id/mymessage_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您好啊，我公司是专业做画册的期待与您合作"
        android:layout_marginTop="20px"
        android:textSize="@dimen/textsize18"
        android:textColor="@color/textcolorback"/>

    <RelativeLayout
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:gravity="center"

     >

        <TextView
            android:id="@+id/mymessage_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2015.11.17  15.30"
            android:textSize="@dimen/textsize18"
            android:gravity="center"
            android:textColor="@color/mypublish_textcolor"/>

        <Button
             android:id="@+id/mymessage_item_delete"
             android:layout_width="150px"
             android:layout_height="60px"
             android:text="@string/shanchu"
             android:gravity="center"
            android:layout_centerVertical="true"
             android:textColor="@color/textcolorback"
             android:background="@mipmap/kuang"
             android:layout_alignParentRight="true"
            android:textSize="@dimen/textsize18"/>

    </RelativeLayout>
</LinearLayout>
