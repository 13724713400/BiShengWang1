<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/main_me_bg">
    <RelativeLayout
        android:id="@+id/detailes_titles"
        android:layout_width="match_parent"
        android:layout_height="124px"
        android:layout_alignParentTop="true"
        android:background="@color/textcoloryellow" >
        <ImageView
            android:id="@+id/detailes_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/btn_arrow_back"
            android:gravity="center"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            />
        <TextView android:textColor="@color/textcolorback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detailes_titles"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textsize22"

            />
        <ImageView
            android:id="@+id/details_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/yudian"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/detailes_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12px"
        android:layout_marginRight="12px"
        android:layout_marginTop="12px"
        android:background="@drawable/typographer_item"
        android:orientation="vertical"
        android:layout_below="@+id/detailes_titles"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/detailes_item_shuai"
                android:layout_width="32px"
                android:layout_height="32px"
                android:scaleType="fitXY"
                android:layout_marginLeft="10px"
               />

            <TextView
                android:id="@+id/detailes_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14px"

                android:textColor="@color/mypublish_textcolor"
                android:textSize="@dimen/textsize16" />
        </LinearLayout>
        <include layout="@layout/publish_item_line" />
        <TextView
            android:id="@+id/detailes_item_titles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="24px"

            android:textColor="@color/mypublish_titles"
            android:textSize="@dimen/textsize18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailes_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_marginRight="10px"
            android:layout_marginTop="20px"
            android:textColor="@color/mypublish_content"
            android:textSize="@dimen/textsize16"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="222px" >

            <ImageView
                android:id="@+id/detailes_item_img1"
                android:layout_width="0dp"
                android:layout_height="222px"
                android:layout_marginLeft="10px"
                android:layout_marginRight="10px"
                android:layout_marginTop="14px"
                android:layout_weight="1"
                android:background="@color/main_me_bg"
                android:scaleType="centerCrop"
              />

            <ImageView
                android:id="@+id/detailes_item_img2"
                android:layout_width="0dp"
                android:layout_height="222px"
                android:layout_marginRight="10px"
                android:layout_marginTop="14px"
                android:layout_weight="1"
                android:background="@color/main_me_bg"
                android:scaleType="centerCrop"
             />

            <ImageView
                android:id="@+id/detailes_item_imge3"
                android:layout_width="0dp"
                android:layout_height="222px"
                android:layout_marginRight="10px"
                android:layout_marginTop="14px"
                android:layout_weight="1"
                android:background="@color/main_me_bg"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24px"
            android:layout_marginTop="24px" >

            <ImageView
                android:id="@+id/detailes_item_recorder"
                android:layout_width="153px"
                android:layout_height="66px"
                android:layout_marginLeft="50px"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_voice" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="26px"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/detailes_item_recordericon"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@mipmap/icon_red" />

                <TextView
                    android:id="@+id/detailes_item_recorder_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="11"
                    android:textColor="@color/mypublish_textcolor"
                    android:textSize="@dimen/textsize14" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10px"
            android:layout_marginTop="10px"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/detailes_item_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:src="@mipmap/icon_positioning" />

            <TextView
                android:id="@+id/detailes_item_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:layout_toRightOf="@+id/detailes_item_img"
                android:textColor="@color/mypublish_textcolor"
                android:textSize="@dimen/textsize14"/>

            <TextView
                android:id="@+id/detailes_item_guanzhutext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="107px"
                android:layout_toLeftOf="@+id/detailes_item_liulan"
                android:textColor="@color/mypublish_content"
                android:textSize="@dimen/textsize14"
                android:layout_marginRight="17px"
                />

            <TextView
                android:id="@+id/detailes_item_liulan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toLeftOf="@+id/detailes_item_liuyan"
                android:textColor="@color/mypublish_content"
                android:textSize="@dimen/textsize14"
                android:layout_marginRight="17px"/>

            <TextView
                android:id="@+id/detailes_item_liuyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="17px"
                android:textColor="@color/mypublish_content"
                android:textSize="@dimen/textsize14"/>
        </RelativeLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/detailes_item_liuyanTwo"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:text="@string/detailes_liuyan"
            android:textSize="@dimen/textsize22"
            android:background="@drawable/typographer_item"
            android:textColor="@color/mypublish_titles"
            android:gravity="center_vertical"
            android:layout_marginLeft="12px"
            android:layout_marginRight="12px"
            android:layout_marginTop="20px"
            android:paddingLeft="10px"
            android:layout_below="@+id/detailes_content"
            />

         <com.zhushan.bishengwang.Iselfview.PulltoListview
            android:id="@+id/detailes_item_liuyan_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/main_me_textline"
             android:dividerHeight="1px"
             android:layout_marginTop="10px"
             android:layout_marginRight="12px"
             android:layout_marginLeft="12px"
             android:layout_below="@+id/detailes_item_liuyanTwo"
             android:layout_above="@+id/detailes_bottom"
             >
        </com.zhushan.bishengwang.Iselfview.PulltoListview>

    <LinearLayout 
        android:id="@+id/detailes_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@color/textcoloryellow">
        <TextView
            android:id="@+id/detailes_liuyan"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/detailes_liuyan"
            android:textColor="@color/textcolorback"
            android:gravity="center"
            android:textSize="@dimen/textsize18"/>
        <TextView
            android:id="@+id/detailes_sixin"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/detailes_sixin"
            android:textColor="@color/textcolorback"
            android:gravity="center"
            android:textSize="@dimen/textsize18"/>
        <TextView
            android:id="@+id/detailes_tuijian"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="@string/detailes_tuijian"
            android:textColor="@color/textcolorback"
            android:gravity="center"
            android:textSize="@dimen/textsize18"/>
    </LinearLayout>
</RelativeLayout>
    
