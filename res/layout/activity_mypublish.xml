<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@color/typograpter_bg"
    >
    
    <RelativeLayout    
       android:layout_width="match_parent"
       android:layout_height="48dp"
       android:background="@color/textcoloryellow" >
        
         <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:src="@drawable/btn_arrow_back"
              android:layout_alignParentLeft="true"
              android:layout_marginLeft="20dp"/>
          <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mypublish_titles"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textsize18"
            />
          <ImageView 
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:src="@drawable/yudian"
              android:layout_alignParentRight="true"
              android:layout_marginRight="20dp"/>
   </RelativeLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="39dp"
	    android:gravity="center"
	    android:background="#282828">  
	    <ImageView 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:src="@drawable/shuai"/>
	    <ImageView 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:src="@drawable/qiu"/>
	    <ImageView 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:src="@drawable/jiu"/>
	    <ImageView 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:src="@drawable/zhi"/>
	</LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#282828"
        >
        <ImageView 
            
            android:layout_width="85dp"
            android:layout_height="2dp"
        />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        
        
    </android.support.v4.view.ViewPager>
    

</LinearLayout>
