<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yindapye_bg" >

    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        android:layout_marginTop="40dp"
        android:src="@drawable/llogoitext" />

    <LinearLayout
        android:id="@+id/login_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/textcoloryellow"
            android:gravity="center"
            android:text="@string/register"
            android:textColor="@color/textcolorback"
            android:textSize="@dimen/textsize18" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/textcolorback"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/textcoloryellow"
            android:textSize="@dimen/textsize18" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top"
       
        android:layout_marginTop="40dp"
        android:src="@drawable/login_logo" />

</RelativeLayout>